@using Entities
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="loginForm">
    <form class="form" asp-action="Login">
        <p class="title">Введите данные</p>

        <p class="formText1">Номер телефона:</p>
        <input asp-for="PhoneNumber" type="text" class="name">
        <span asp-validation-for="PhoneNumber"></span>

        <p class="formText2">Пароль:</p>
        <input asp-for="Password" type="password" class="pass">
        <span asp-validation-for="Password"></span>

        @if (@Model is not null && @Model.WasError)
        {
            <p>Такого пользователя не существует, либо неправильно введен пароль</p>
        }
        else
        {
            <p></p>
        }

        <button type="submit" class="acceptBtn">Вход</button>
        <button asp-controller="Registration" asp-action="Index" class="acceptBtn" >Регистрация</button>

    </form>

</div>


@section scripts{
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/passConfirmationValidation.js" asp-append-version="true"></script>
    }

